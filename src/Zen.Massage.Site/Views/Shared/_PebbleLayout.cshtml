<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zen Massage</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/slate.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/slate.min.css" asp-append-version="true" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div class="container">
        <header class="row" role="banner">
        </header>

        <main class="row" role="main">
            @RenderBody()
        </main>

        <footer class="row" role="contentinfo">
            <hr />
            <div class="inner-wrap">
                <p class="copyright">&copy; Zen Design Software 2015</p>
            </div>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/js/lib/slate/slate.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/lib/slate/slate.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
